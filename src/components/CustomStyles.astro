---
import '@fontsource/michroma';
import '@fontsource/pt-sans-caption';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'PT Sans Caption';
    --aw-font-serif: 'PT Sans Caption';
    --aw-font-heading: 'Michroma';

    --aw-color-primary: #f68924;
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);
    --aw-color-black-custom: #2b2b2b;
    --aw-color-grey: #919191;
    --aw-color-grey-dark: #454545;

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: #161617;

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  .dark {
    --aw-font-sans: 'PT Sans Caption';
    --aw-font-serif: 'PT Sans Caption';
    --aw-font-heading: 'Michroma';

    --aw-color-primary: #f68924;
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);
    --aw-color-black-custom: #2b2b2b;
    --aw-color-grey: #919191;
    --aw-color-grey-dark: #454545;

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: #161617;

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--aw-font-heading);
  }

  p {
    font-size: 16px;
  }
</style>
